<h1>Login</h1>

<%- message %>

<form action="/login" method="post">
  <p>
    <label>Username</label>
    <input type="text" name="username">
  </p>
  <p>
    <label>Password</label>
    <input type="text" name="password">
  </p>
  <p>
    <input type="submit" value="Login">
  </p>
  <p>
    <a href="/signup">Register</a>
  </p>

</form>
